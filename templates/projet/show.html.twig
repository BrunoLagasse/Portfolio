{% extends 'base.html.twig' %}

{% block title %}Mes réalisations{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center">Projet :<span class="project_title">&nbsp;{{projet.name}}</span></h1>

    <p>Aperçu</p>
    <img src="{{ asset('/uploads/' ~ projet.picture) }}"/>

    <p class="d-flex justify-content-center">Technologies utilisées :</p>


    {% if app.user %}
    <a href="{{ path('projet_index') }}"><button type="button" class="btn btn-primary">Retour à la liste</button></a>

    <a href="{{ path('projet_edit', {'id': projet.id}) }}"><button type="button" class="btn btn-success">Editer</button></a>

    {{ include('projet/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
